/* pages/create/create.wxss */

.container{
	padding: 30rpx 30rpx 40rpx;
	overflow: hidden;
	box-sizing: border-box;
}
.upload{
	position: relative;
	text-align: center;
	height: 400rpx;
	background: #d7d7d7;
	margin-bottom: 20rpx;
}
.upload.up{
	margin-top: 30rpx;
}
.inp-box{
	padding: 20rpx 0;
	border-bottom: 1px solid #f0f0f0;
	margin-bottom: 20rpx;
}
.inp-box .inp{
	font-size: 28rpx;
	color: #333;
	flex: 1;
	max-width: 90%;
}
.inp-box .input-placeholder{
	color: #333;
}
.inp-box .rad{
	transform: scale(.7);
	margin-right: 20rpx;
}
.btns{
	margin-top: 40rpx;
}
.txt{
	color: #333;
	font-size: 28rpx;
}
.txt1{
	font-size: 24rpx;
	color: #999;
	line-height: 2;
}
.txt2{
	font-size: 24rpx;
	color: #333;
}
.txt3{
	color: #999;
	font-size: 28rpx;
}
.txt4{
	font-size: 28rpx;
	color: #fff;
}