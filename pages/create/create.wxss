.container {
  padding: 30rpx 30rpx 40rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.upload {
  position: relative;
  text-align: center;
  height: 400rpx;
  background: #d7d7d7;
  margin-bottom: 20rpx;
}

.upload image {
  width: 100%;
  height: 100%;
}

.upload .txt0 {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  color: #fff;
  font-size: 28rpx;
}

.upload .del {
  width: 80rpx;
  height: 80rpx;
  background: red;
  position: absolute;
  right: 0;
  top: 0;
}

.upload .del image {
  width: 50%;
  height: 50%;
  margin: 25%;
  vertical-align: top;
}

.upload.up {
  margin-top: 30rpx;
}

