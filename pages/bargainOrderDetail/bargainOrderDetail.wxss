/* pages/bargainDetail/bargainOrderDetail.wxss */
.container {
  padding-bottom: 100rpx;
}

.line-shadow {
  width: 100%;
  height: 1px;
  background: #f0f0f0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.box {
  padding: 0 30rpx;
}

.top {
  padding: 30rpx 0;
  border-bottom: 1px solid #ccc;
}

.txt {
  font-size: 24rpx;
  color: #999;
  letter-spacing: 1px;
}

.txt1 {
  font-size: 28rpx;
  color: #333;
}
.txt2{
  color: rgb(189, 0, 0);
}
.top .txt {
  font-family: 'PingFang-SC-Medium';
  white-space: nowrap;
}

.top .user image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100%;
  vertical-align: top;
  margin-right: 20rpx;
}

.mid {
  padding-bottom: 30rpx;
  border-bottom: 1px solid #ccc;
}

.mid .item {
  padding: 30rpx 0 20rpx;
  line-height: 1;
}

.bot {
  padding: 40rpx 0;
}

.bot .user-list {
  padding: 30rpx 0;
}

.bot .user-list image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}

.btns {
  padding: 0 30rpx;
}

.btns .btn {
  height: 98rpx;
  line-height: 98rpx;
}
