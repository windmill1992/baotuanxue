/* pages/cashRecord/cashRecord.wxss */

.container {
  background: #f0f0f0;
}

.line-shadow {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
}

.tabs {
  position: fixed;
  top: 0;
  left: 0;
  background: #fff;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.tabs .tab {
  text-align: center;
  color: #666;
  font-size: 30rpx;
}

.tabs .tab.on {
  color: #00d0ff;
}

.tabs .line {
  width: 70rpx;
  height: 1px;
  border-radius: 1px;
  background:#00d0ff;
  position: absolute;
  bottom: 10rpx;
  left: 12%;
  transition: left 0.4s ease;
}

.tabs .line.r1 {
  left: 45%;
}

.tabs .line.r2 {
  left: 78%;
}

.list {
  padding: 30rpx 0;
  margin-top: 90rpx;
}

.item {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.item .txt {
  font-size: 30rpx;
  color: #333;
  max-width: 480rpx;
}

.item .state {
  font-size: 24rpx;
  width: 120rpx;
  height: 30rpx;
  line-height: 26rpx;
  text-align: center;
  box-sizing: border-box;
}

.item .state.ed {
  background: #00bf4a;
  color: #fff;
  border: 2rpx solid #00bf4a;
}

.item .state.ing {
  border: 2rpx solid #00ab41;
  color: #00ab41;
}

.item .state.fail {
  background: #ff4c4c;
  border: 2rpx solid #ff4c4c;
  color: #fff;
}

.item .time {
  font-size: 24rpx;
  color: #ccc;
  margin-top: 20rpx;
}
