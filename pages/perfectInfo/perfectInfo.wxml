<!--pages/perfectInfo/perfectInfo.wxml-->
<view class='container'>
	<view class='title'>基本信息</view>
	<view class='box'>
		<view class='item1 flex spb'>
			<view class='left'>
				<view class='label'>商家LOGO</view>
				<view class='txt'>建议尺寸１:１，小于３Ｍ</view>
			</view>
			<view class='right'>
				<view class='upload'>
					<view class='txt1'>点击上传</view>
				</view>
			</view>
		</view>
		<view class='item flex spb'>
			<view class='label'>商家名称</view>
			<input class='inp' bindinput='getValue' data-prop='name' placeholder='点击输入商家名称'></input>
		</view>
		<view class='item flex spb'>
			<view class='label'>商家行业</view>
			<picker mode='selector' range='{{[]}}' class='pick' bindchange='getValue' data-prop='industry'>
				<text class='def' wx:if='{{!industry}}'>点击选择经营行业</text>
				<text wx:else>{{industry}}</text>
			</picker>
		</view>
		<view class='item flex spb'>
			<view class='label'>所在城市</view>
			<picker mode='region' class='pick' bindchange='getValue' data-prop='region'>
				<text class='def' wx:if='{{!region}}'>点击选择城市</text>
				<text wx:else>{{region}}</text>
			</picker>
		</view>
		<view class='item flex spb'>
			<view class='label'>商家地址</view>
			<input class='inp' bindinput='getValue' data-prop='detailAddr' placeholder='请输入详细地址'></input>
		</view>
	</view>
	<view class='title'>店铺信息</view>
	<view class='box'>
		<view class='item flex spb'>
			<view class='label'>联系人</view>
			<input class='inp' bindinput='getValue' data-prop='linkman' placeholder='请输入姓名'></input>
		</view>
		<view class='item flex spb'>
			<view class='label'>手机号</view>
			<input type='number' class='inp' bindinput='getValue' data-prop='mobile' placeholder='请输入手机号'></input>
		</view>
		<view class='item flex spb'>
			<view class='label'>微信号</view>
			<input class='inp' bindinput='getValue' data-prop='wxId' placeholder='请输入微信号'></input>
		</view>
	</view>

	<view class='btns'>
		<button class='btn green bold' bindtap='submit'>保存</button>
	</view>
</view>
<view class='tips' wx:if='{{toast.show}}'>{{toast.title}}</view>
<view class='error' wx:if='{{error.show}}'>{{error.title}}</view>