/* pages/cashManage/cashManage.wxss */

.container{
	background: #f0f0f0;
	padding-bottom: 100rpx;
}
.line-shadow {
  width: 100%;
  height: 1px;
  background: #f0f0f0;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
.top{
	height: 410rpx;
	background: #eee;
	padding: 30rpx;
}
.top .bg{
	height: 346rpx;
	width: 100%;
	position: relative;
	border-radius: 18rpx;
	overflow: hidden;
}
.top .bg image{
	position: absolute;
	width: 100%;
	height: 100%;
	left: 0;
	top: 0;
	z-index: 1;
}
.box{
	height: 346rpx;
	width: 100%;
	position: absolute;
	left: 0;
	top: 0;
	z-index: 2;
	border-radius: 18rpx;
	box-shadow: 0 6rpx 24rpx #e5e5e5;
}
.box .txt{
	font-size: 24rpx;
	color: #fff;
}
.box .num{
	font-size: 108rpx;
	font-family: 'AkzidenzGroteskBQ-XBold';
	font-weight: 700;
	color: #fff;
}
.mid{
	background: #fff;
	padding: 0;
	margin-top: -50rpx;
	position: relative;
	z-index: 3;
}
.mid .nav{
	padding: 0 30rpx;
	display: block;
}
.mid .item{
	padding: 24rpx 0;
	border-bottom: 1px solid #ccc;
}
.mid .item .txt1{
	font-size: 30rpx;
	color: #333;
}
.mid .item .arr image{
	width: 20rpx;
	height: 44rpx;
}
.mid .item:last-child{
	border-bottom: 0;
}