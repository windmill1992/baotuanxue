/**app.wxss**/

input, select, textarea, label, form {
  font-family: "PingFangSC-Regular", "微软雅黑", "Arial";
}

page {
  font-family: "PingFangSC-Regular", "微软雅黑", "Arial";
  height: 100%;
	font-size: 28rpx;
}

.container {
  min-height: 100%;
  position: relative;
  width: 100%;
  font-family: "PingFangSC-Regular", "微软雅黑", "Arial";
}

.flex {
  display: flex;
}

.flex1{
	flex: 1;
}

.spa {
  justify-content: space-around;
}

.spb {
  justify-content: space-between;
}

.spc {
  justify-content: center;
}

.fcen {
  align-items: center;
}

.fend{
	justify-content: flex-end;
}

.fcol {
  display: flex;
  flex-direction: column;
}

.fwrap{
	flex-wrap: wrap;
}

.fnowrap{
	flex-wrap: nowrap;
}

.fshrink0{
	flex-shrink: 0;
}

.txtL{
	text-align: left!important;
}

.txtC{
	text-align: center!important;
}

.txtR{
	text-align: right!important;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.clear {
  clear: both;
}

.clearfix::after {
  display: table;
  content: '';
  clear: both;
  height: 0;
  overflow: hidden;
}

.hide1 {
  display: none!important;
}

.show {
  display: block!important;
}

.back::before, .more::after {
  content: '';
  display: inline-block;
  width: 16rpx;
  height: 16rpx;
  transform: rotate(45deg) translateY(-1rpx);
}

.more::after {
  border-right: 3rpx solid #999;
  border-top: 3rpx solid #999;
}

.back::before {
  border-left: 3rpx solid #fff;
  border-bottom: 3rpx solid #fff;
}
.tips {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  background: rgba(0, 0, 0, 0.7);
  color: #fff;
  text-align: center;
  font-size: 32rpx;
  line-height: 1.5;
  padding: 30rpx;
  border-radius: 10rpx;
	z-index: 9999;
}

.error {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	padding: 24rpx 30rpx;
	font-size: 24rpx;
	color: #fff;
	background: #ff4c4c;
	word-break: break-all;
}

.loadmore {
	font-size: 26rpx;
	color: #fc2441;
	text-align: center;
	line-height: 80rpx;
}

.loadmore.no {
	color: #c9c9c9;
}

button::after {
	border: none;
}

.input-placeholder, .textarea-placeholder{
	color: #999;
}

.btn-green {
	width: 100%;
	height: 88rpx;
	line-height: 88rpx;
	color: #fff;
	font-size: 30rpx;
	text-align: center;
	font-family: 'PingFang-SC-Bold';
	background: #00bf4a;
	border-radius: 6rpx;
}